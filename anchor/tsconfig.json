{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "tests/**/*",
    "programs/**/*"
  ],
  "exclude": ["node_modules", "app"]
}
